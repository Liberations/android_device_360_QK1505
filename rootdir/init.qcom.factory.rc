# Define fastmmi
service fastmmi /system/bin/mmi
    user root
    group root
    disabled


service versiond /system/bin/versiond
    user root
    disabled
    oneshot

service versiond /system/bin/versiond
    user root
    disabled
    oneshot

# Creating a scratch storage on /data for factory testing.
on factory-fs
    mount tmpfs tmpfs /data

on post-ffbm-fs-data
    mkdir /storage/sdcard1 0776 root root
    mount vfat /dev/block/mmcblk0p1 /storage/sdcard1

on early-mmi
    # ========================================================
    #              This is FFBM only settings.
    # ========================================================

    #mount sdcard by default
    mount vfat /dev/block/mmcblk1p1 /storage/sdcard1

    #mkdir for factory data files.
    mkdir /cache/FTM_AP 0750 root root
    #sensor settings
    chmod 775 /persist/sensors
    chmod 664 /persist/sensors/sensors_settings
    chown system root /persist/sensors/sensors_settings
    mkdir /data/misc/sensors 775 system root

    #Create NETMGR daemon socket area
    mkdir /dev/socket/netmgr 0750 radio radio

on mmi
    #Start the following services needed for fftm
    start vold
    start adbd
    start fastmmi
    class_start main
    class_start late_start
    start ptt_ffbm
    start versiond
    start ftmd

on post-mmi
    stop zygote
    stop zygote_secondary
    stop bootanim
    start installd
    start qseecomd

on ffbm
    trigger early-fs
    trigger factory-fs
    trigger fs
    trigger post-fs
    trigger post-ffbm-fs-data

    # Load properties from /system/ + /factory after fs mount. Place
    # this in another action so that the load will be scheduled after the prior
    # issued fs triggers have completed.
    trigger load_system_props_action

    # Now we can mount /data. File encryption requires keymaster to decrypt
    # /data, which in turn can only be loaded when system properties are present
    trigger post-fs-data
    trigger load_persist_props_action

    # Remove a file to wake up anything waiting for firmware.
    trigger firmware_mounts_complete

    trigger early-boot
    trigger boot
    trigger early-mmi
    trigger mmi
    trigger post-mmi
    # always lighten leds in fastmmi mode, zhangjie, 2016.02.25
    write /sys/class/leds/green/brightness 50
